public class QuizController : Controller
{
    // POST: Quiz/CalculateScore
    [HttpPost]
    public ActionResult CalculateScore(AnswerSubmission submission)
    {
        if (submission == null || submission.Answers == null)
        {
            // Handle the case where no data is submitted
            return new HttpStatusCodeResult(HttpStatusCode.BadRequest, "No answers submitted.");
        }

        int totalQuestions = GetTotalNumberOfQuestions(); // Implement this method based on your data
        int correctAnswers = 0;

        foreach (var answer in submission.Answers)
        {
            if (IsAnswerCorrect(answer.QuestionId, answer.SelectedOptionId)) // Implement your answer checking logic
            {
                correctAnswers++;
            }
        }

        double scorePercentage = (double)correctAnswers / totalQuestions * 100;

        // You can redirect to a different view or return JSON data
        // return Json(new { Score = scorePercentage });
        return View("ScoreView", scorePercentage); // Assuming you have a view named 'ScoreView' to display the score
    }

