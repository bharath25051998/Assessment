<script>
    CKEDITOR.replace('editor1', {
        // Configure CKEditor to handle Enter key to insert <br> instead of <p>
        enterMode: CKEDITOR.ENTER_BR,
        shiftEnterMode: CKEDITOR.ENTER_BR,

        // Optional: Disable auto grow plugin if not needed
        removePlugins: 'autogrow'
    });
</script>
