@model YourNamespace.YourViewModel

<!DOCTYPE html>
<html>
<head>
    <title>CKEditor Example</title>
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
    <style>
        .no-scroll {
            overflow: hidden;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        <div>
            @Html.LabelFor(model => model.YourTextField1)
            @Html.TextAreaFor(model => model.YourTextField1, new { @class = "ckeditor" })
        </div>
        <div>
            @Html.LabelFor(model => model.YourTextField2)
            @Html.TextAreaFor(model => model.YourTextField2, new { @class = "ckeditor" })
        </div>
        <input type="submit" value="Submit" />
    }

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.ckeditor').forEach(function(textarea) {
                var editor = CKEDITOR.replace(textarea);

                editor.on('focus', function() {
                    document.body.classList.add('no-scroll');
                });

                editor.on('blur', function() {
                    document.body.classList.remove('no-scroll');
                });
            });
        });
    </script>
</body>
</html>
