<script>
    function toggleDetails(card) {
        var details = card.querySelector('.additional-details');
        var arrowIcon = card.querySelector('.arrow-icon');

        // Toggle visibility of additional details for the clicked card
        if (details.style.display === 'none') {
            // Show details of the clicked card
            details.style.display = 'block';
            // Change arrow to upwards
            arrowIcon.textContent = '\u25B2';
        } else {
            // Hide details of the clicked card
            details.style.display = 'none';
            // Change arrow to downwards
            arrowIcon.textContent = '\u25BC';
        }

        // Hide details of all other cards
        hideOtherDetails(card);
    }
    
    function hideOtherDetails(clickedCard) {
        var allDetails = document.querySelectorAll('.additional-details');

        // Loop through all additional details and hide details of other cards
        allDetails.forEach(function(details) {
            if (details !== clickedCard.querySelector('.additional-details')) { // Check if it's not the details of the clicked card
                var arrowIcon = details.previousElementSibling.querySelector('.arrow-icon');

                // Hide details
                details.style.display = 'none';
                // Change arrow to downwards
                arrowIcon.textContent = '\u25BC';
            }
        });
    }
</script>
