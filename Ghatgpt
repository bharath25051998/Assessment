<style>
.modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  z-index: 1; /* Sit on top */
  left: 0;
  top: 0;
  width: 100%; /* Full width */
  height: 100%; /* Full height */
  overflow: auto; /* Enable scroll if needed */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal content */
.modal-content {
  background-color: #fefefe;
  margin: 15% auto; /* 15% from the top and centered */
  padding: 20px;
  border: 1px solid #888;
  width: 80%; /* Could be more or less, depending on screen size */
}

/* Close button */
.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}
</style>



@{
    List<string> namesFromBackend = ViewBag.NamesFromBackend;
}

<button onclick="openModal()">Open Modal</button>

<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <form id="formData">
      <!-- Input fields will be dynamically generated here -->
      @foreach (var name in namesFromBackend)
      {
          <input type="text" name="@name" placeholder="@name" />
      }
    </form>
  </div>
</div>

<button onclick="saveData()">Save</button>

<script>
function openModal() {
  var modal = document.getElementById("myModal");
  modal.style.display = "block";
}

function closeModal() {
  var modal = document.getElementById("myModal");
  modal.style.display = "none";
}

function saveData() {
  var formData = {};
  var inputs = document.getElementById("formData").getElementsByTagName("input");
  for (var i = 0; i < inputs.length; i++) {
    formData[inputs[i].name] = inputs[i].value;
  }
  
  // Convert formData to JSON
  var jsonData = JSON.stringify(formData);
  
  // Send jsonData to backend for saving
  console.log(jsonData); // For testing, you can replace this with an AJAX call to your backend
}
</script>
