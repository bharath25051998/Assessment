$('#finishBtn').on('click', function() {
    // ... calculation of the score
    // Show the confirmation modal
    $('#confirmSubmitModal').modal('show');
});


$('#confirmSubmit').on('click', function() {
    // Assuming 'questions' is defined and has data before calculating the score
    if (typeof questions !== 'undefined' && questions.length > 0) {
        var finalScore = calculateScore(questions);
        var totalQuestions = questions.length;
        var courseId = /* Retrieve your course ID from the relevant element or variable */;
        
        // AJAX call to submit the data to the server without page refresh
        $.ajax({
            url: '/YourController/YourAction',
            type: 'POST',
            data: {
                score: finalScore,
                totalQuestions: totalQuestions,
                courseId: courseId
            },
            success: function(response) {
                // Handle success, maybe redirect to a result page or show a message
                window.location.href = response.redirectUrl; // if the response includes a URL to redirect to
            },
            error: function(xhr, status, error) {
                // Handle error
                console.error(error);
            }
        });

        // Hide the modal after submission
        $('#confirmSubmitModal').modal('hide');
    } else {
        alert('Quiz data is not available.');
    }
});
