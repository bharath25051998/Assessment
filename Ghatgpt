<!DOCTYPE html>
<html>
<head>
    <!-- Include CKEditor library -->
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
</head>
<body>
    <!-- The textarea to be replaced by CKEditor -->
    <textarea id="editor1" name="editor1" rows="10" cols="80"></textarea>

    <script>
        CKEDITOR.replace('editor1', {
            // Set Enter key to insert <br> instead of <p>
            enterMode: CKEDITOR.ENTER_BR,
            // Set Shift+Enter key to insert <br> as well
            shiftEnterMode: CKEDITOR.ENTER_BR,
            // Optionally, remove the autogrow plugin if not needed
            removePlugins: 'autogrow'
        });

        // Optional: Custom handling to ensure no unwanted scrolling
        CKEDITOR.instances.editor1.on('key', function(event) {
            if (event.data.keyCode == CKEDITOR.ENTER || event.data.keyCode == CKEDITOR.SHIFT + CKEDITOR.ENTER) {
                event.cancel();
                // Insert a line break without causing scrolling
                this.insertHtml('<br>');
            }
        });
    </script>
</body>
</html>
