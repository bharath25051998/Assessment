@model List<CourseModule>

<div id="moduleCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <div class="module-content">
                    <h1>@Model[i].ModuleName</h1>
                    <p>@Model[i].ModuleContent</p>
                    <div class="text-center">
                        <label>
                            <input type="checkbox" class="module-complete-checkbox" @(Model[i].ModuleID <= Model[i].LastCompletedModuleId ? "checked disabled" : "") data-module-id="@Model[i].ModuleID">
                            Complete Module
                        </label>
                    </div>
                </div>
                @if (i == Model.Count - 1)
                {
                    <button class="btn btn-success finish-course">Finish Course</button>
                }
                else
                {
                    <button class="btn btn-primary next-module" data-module-id="@Model[i].ModuleID">Next</button>
                }
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#moduleCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#moduleCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.module-complete-checkbox').on('change', function() {
                var moduleId = $(this).data('module-id');
                var isChecked = $(this).is(':checked');
                // AJAX call to server to mark module as complete
                if(isChecked) {
                    $.ajax({
                        url: '@Url.Action("MarkModuleComplete", "Courses")', // Replace with your actual endpoint
                        type: 'POST',
                        data: { moduleId: moduleId },
                        success: function(response) {
                            if(response.success) {
                                // Enable 'Next' button
                                $('.next-module[data-module-id="' + moduleId + '"]').prop('disabled', false);
                            } else {
                                // Handle error, uncheck the checkbox
                                $('input[data-module-id="' + moduleId + '"]').prop('checked', false);
                            }
                        },
                        error: function() {
                            // Handle AJAX error, uncheck the checkbox
                            $('input[data-module-id="' + moduleId + '"]').prop('checked', false);
                        }
                    });
                }
            });

            $('.next-module').on('click', function() {
                // Move to the next module in the carousel
                $('#moduleCarousel').carousel('next');
            });

            $('.finish-course').on('click', function() {
                // Implement course completion logic
                alert('Course completed!');
            });
        });
    </script>
}
