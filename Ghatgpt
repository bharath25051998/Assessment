@model List<CourseModule>

<div id="moduleCarousel" class="carousel slide" data-interval="false"> <!-- Disable auto-sliding -->
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var isModuleCompleted = Model[i].ModuleID <= Model[i].LastCompletedModuleId;
            <div class="carousel-item @(i == 0 ? "active" : "")" data-module-id="@Model[i].ModuleID">
                <div class="module-content-box">
                    <h1>@Model[i].ModuleName</h1>
                    <div class="module-content">
                        <p>@Model[i].ModuleContent</p>
                    </div>
                    @if (i == Model.Count - 1)
                    {
                        <!-- Finish button only on the last module -->
                        <button class="btn btn-success finish-course">Finish Course</button>
                    }
                    <div class="text-center module-footer">
                        <label>
                            <input type="checkbox" class="module-complete-checkbox" @(isModuleCompleted ? "checked disabled" : "") data-module-id="@Model[i].ModuleID">
                            Complete Module
                        </label>
                    </div>
                </div>
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#moduleCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    </a>
    <a class="carousel-control-next" href="#moduleCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.module-complete-checkbox').on('change', function() {
                var moduleId = $(this).data('module-id');
                var isChecked = $(this).is(':checked');
                // AJAX call to server to mark module as complete
                if(isChecked) {
                    $.ajax({
                        url: '@Url.Action("MarkModuleComplete", "Courses")', // Replace with your actual endpoint
                        type: 'POST',
                        data: { moduleId: moduleId },
                        success: function(response) {
                            if(response.success) {
                                // Automatically move to the next module if this is not the last
                                var $currentItem = $('#moduleCarousel .carousel-item.active');
                                var $nextItem = $currentItem.next('.carousel-item');
                                if($nextItem.length) {
                                    $('#moduleCarousel').carousel('next');
                                }
                            } else {
                                // Handle error, uncheck the checkbox
                                $('input[data-module-id="' + moduleId + '"]').prop('checked', false);
                            }
                        },
                        error: function() {
                            // Handle AJAX error, uncheck the checkbox
                            $('input[data-module-id="' + moduleId + '"]').prop('checked', false);
                        }
                    });
                }
            });

            $('.finish-course').on('click', function() {
                // Implement course completion logic
                alert('Course completed!');
            });
        });
    </script>
}

<style>
    /* ... your previous styles here ... */
    .module-content-box {
        padding: 20px;
        border: 1px solid #ccc;
        height: 400px;
        overflow-y: auto;
        margin: 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        position: relative; /* Required for absolute positioning inside */
    }
    .module-footer {
        position: absolute;
        bottom: 20px;
        width: 100%;
    }
    .finish-course {
        position: absolute;
        right: 20px;
        bottom: 20px;
    }
</style>
