@{
    List<string> namesFromBackend = ViewBag.NamesFromBackend;
}

<button onclick="openModal()">Open Modal</button>

<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <form id="formData">
      <!-- Input fields will be dynamically generated here -->
      @foreach (var name in namesFromBackend)
      {
          <input type="text" name="@name" placeholder="@name" />
      }
    </form>
  </div>
</div>

<button onclick="saveData()">Save</button>

<script>
function openModal() {
  var modal = document.getElementById("myModal");
  modal.style.display = "block";
}

function closeModal() {
  var modal = document.getElementById("myModal");
  modal.style.display = "none";
}

function saveData() {
  var formData = {};
  var inputs = document.getElementById("formData").getElementsByTagName("input");
  for (var i = 0; i < inputs.length; i++) {
    formData[inputs[i].name] = inputs[i].value;
  }
  
  // Convert formData to JSON
  var jsonData = JSON.stringify(formData);
  
  // Send jsonData to backend for saving
  console.log(jsonData); // For testing, you can replace this with an AJAX call to your backend
}
</script>
