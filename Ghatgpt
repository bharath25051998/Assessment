<script type="text/javascript">
    function searchCourses() {
        var chapterId = document.getElementById('chapterDropdown').value;
        var courseId = document.getElementById('courseDropdown').value;

        $.ajax({
            url: '@Url.Action("GetCourseData", "YourControllerName")',
            type: 'GET',
            data: { chapterId: chapterId, courseId: courseId },
            success: function(data) {
                // Assuming 'data' is the HTML of the table you want to update
                $('#resultsTable').html(data);
            },
            error: function(xhr, status, error) {
                // Handle errors here
                console.error(error);
            }
        });
    }
</script>
