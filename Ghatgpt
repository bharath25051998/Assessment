@model List<YourNamespace.Models.Question>

@foreach (var question in Model)
{
    <div>
        <h2>@question.QuestionText</h2>
        @if (question.QuestionType == 1) // Single-choice question
        {
            foreach (var option in question.Options)
            {
                <label>
                    <input type="radio" name="question_@question.AssessmentQuestionID" value="@option.Id" />
                    @option.Text
                </label>
            }
        }
        else if (question.QuestionType == 2) // Multiple-choice question
        {
            foreach (var option in question.Options)
            {
                <label>
                    <input type="checkbox" name="question_@question.AssessmentQuestionID" value="@option.Id" />
                    @option.Text
                </label>
            }
        }
    </div>
}

<button type="submit">Submit Assessment</button>
