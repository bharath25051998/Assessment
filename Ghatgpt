<script>
    function toggleDetails(cardId) {
        var details = document.getElementById(cardId).querySelector('.additional-details');
        var arrowIcon = document.getElementById(cardId).querySelector('.arrow-icon');

        // Check if details are already hidden
        if (details.style.display === 'none') {
            return; // Exit function if details are already hidden
        }

        // Toggle visibility of additional details for the clicked card
        if (details.style.display !== 'block') {
            // Show details of the clicked card
            details.style.display = 'block';
            // Change arrow to upwards
            arrowIcon.textContent = '\u25B2';
        } else {
            // Hide details of the clicked card
            details.style.display = 'none';
            // Change arrow to downwards
            arrowIcon.textContent = '\u25BC';
        }

        // Hide details of all other cards
        hideOtherDetails(cardId);
    }
    
    function hideOtherDetails(clickedCardId) {
        var allCards = document.querySelectorAll('.card');

        // Loop through all cards and hide details of other cards
        allCards.forEach(function(card) {
            var cardId = card.children[1].getAttribute('id'); // Access the id attribute of the second div
            if (cardId !== clickedCardId) { // Check if it's not the clicked card
                var details = card.querySelector('.additional-details');
                var arrowIcon = card.querySelector('.arrow-icon');
                
                // Check if details are currently hidden
                if (details.style.display !== 'none') {
                    // Hide details
                    details.style.display = 'none';
                    // Change arrow to downwards
                    arrowIcon.textContent = '\u25BC';
                }
            }
        });
    }
</script>
