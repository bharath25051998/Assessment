<!DOCTYPE html>
<html>
<head>
    <title>CKEditor Example</title>
    <script src="https://cdn.ckeditor.com/4.16.2/standard/ckeditor.js"></script>
</head>
<body>
    <textarea class="ckeditor" name="editor1" rows="10" cols="80">Text area 1</textarea>
    <textarea class="ckeditor" name="editor2" rows="10" cols="80">Text area 2</textarea>
    <textarea class="ckeditor" name="editor3" rows="10" cols="80">Text area 3</textarea>
    <textarea class="ckeditor" name="editor4" rows="10" cols="80">Text area 4</textarea>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var editors = document.querySelectorAll('.ckeditor');
            editors.forEach(function (textarea, index) {
                var editor = CKEDITOR.replace(textarea, {
                    enterMode: CKEDITOR.ENTER_P, // or CKEDITOR.ENTER_BR
                    shiftEnterMode: CKEDITOR.ENTER_P // or CKEDITOR.ENTER_BR
                });

                editor.on('contentDom', function() {
                    this.document.on('keydown', function(event) {
                        if (event.data.$.keyCode === 13) { // 13 is the Enter key
                            event.data.preventDefault(); // Prevent the default scrolling behavior
                        }
                    });
                });
            });
        });
    </script>
</body>
</html>
