@model List<CourseModule> <!-- Assuming your model is a list of CourseModule objects -->

<div id="moduleCarousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="carousel-item @(Model[i].ModuleID <= Model[i].LastCompletedModuleId ? "completed" : "") @(i == 0 ? "active" : "")">
                <div class="module-content">
                    <h3>@Model[i].ModuleName</h3>
                    <!-- Other content here -->
                    <label>
                        <input type="checkbox" class="module-complete-checkbox" data-module-id="@Model[i].ModuleID" @(Model[i].ModuleID <= Model[i].LastCompletedModuleId ? "checked disabled" : "") />
                        Complete Module
                    </label>
                </div>
            </div>
        }
    </div>

    <a class="carousel-control-prev" href="#moduleCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#moduleCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

@section Scripts {
    <script>
    $(document).ready(function() {
        // Disable the next button if the current module is not completed
        $('.carousel').on('slid.bs.carousel', function (e) {
            var nextModuleId = $(e.relatedTarget).find('.module-complete-checkbox').data('module-id');
            if ($('.module-complete-checkbox[data-module-id="' + nextModuleId + '"]').is(':checked')) {
                $('.carousel-control-next').prop('disabled', false);
            } else {
                $('.carousel-control-next').prop('disabled', true);
            }
        });

        $('.module-complete-checkbox').change(function() {
            var $this = $(this);
            var moduleId = $this.data('module-id');
            if($this.is(':checked')) {
                // Make an AJAX call to update the completion status
                $.ajax({
                    url: '@Url.Action("MarkModuleComplete", "YourController")', // Replace with your actual URL
                    type: 'POST',
                    data: { moduleId: moduleId },
                    success: function(response) {
                        if(response.success) {
                            console.log("Module completed.");
                            $this.prop('disabled', true);
                            $('.carousel-control-next').prop('disabled', false);
                        }
                    }
                });
            }
        });
    });
    </script>
}
