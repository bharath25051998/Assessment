// Function to show the modal
function showModal() {
  document.getElementById('customModal').style.display = 'block';
}

// Function to hide the modal
function closeModal() {
  document.getElementById('customModal').style.display = 'none';
}

// Function to handle the test submission
function submitTest() {
  // Perform your AJAX call to submit the test
  // After submission, close the modal
  closeModal();
  
  // You can redirect or refresh the page if needed
  // window.location.href = 'your_new_page.html';
}

// Attach showModal function to the Finish button's click event
document.getElementById('finishBtn').addEventListener('click', showModal);




