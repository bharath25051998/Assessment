<select id="myDropdown">
  <option value="value1">Option 1</option>
  <option value="value2">Option 2</option>
  <option value="value3">Option 3</option>
</select>

<script>
  // Assuming you have the value you want to make selected
  var selectedValue = "value2"; // Replace this with your value

  // Find the dropdown element
  var dropdown = document.getElementById("myDropdown");

  // Loop through each option to find and select the one matching the desired value
  for (var i = 0; i < dropdown.options.length; i++) {
    if (dropdown.options[i].value === selectedValue) {
      dropdown.options[i].selected = true;
      break;
    }
  }
</script>
