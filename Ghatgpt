public IActionResult GenerateDownloadLink(int docId, string docType, string docName)
{
    var request = HttpContext.Request;
    var baseUrl = $"{request.Scheme}://{request.Host}{request.PathBase}";
    var downloadUrl = Url.Action("Download", "YourController", new { id = docId, type = docType, name = docName }, protocol: request.Scheme);

    return Content(baseUrl + downloadUrl);
}
