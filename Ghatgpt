public ActionResult AllCoursesStatus()
{
    // ... Your existing code to get the DataTable

    DataTable dtCourses = ...; // Your DataTable from the ViewBag or elsewhere

    List<CourseDetail> courseDetails = new List<CourseDetail>();
    foreach (DataRow row in dtCourses.Rows)
    {
        var courseDetail = new CourseDetail
        {
            CourseId = Convert.ToInt32(row["CourseId"]),
            CourseName = row["CourseName"].ToString(),
            // Map other properties
        };
        courseDetails.Add(courseDetail);
    }

    ViewBag.CourseDetails = courseDetails;

    // Return your view as normal
    return View();
}
