using System;
using System.Collections.Generic;
using System.Linq;
using System.Web.Mvc;

public class YourController : Controller
{
    public ActionResult YourAction()
    {
        // Assuming ViewBag.Data is your list of dictionaries
        List<Dictionary<string, int>> data = ViewBag.Data;

        // Dictionary to store the sums and counts for each key
        var combined = new Dictionary<string, (int sum, int count)>();

        // Process each dictionary (row)
        foreach (var dict in data)
        {
            foreach (var kvp in dict)
            {
                if (!combined.ContainsKey(kvp.Key))
                {
                    combined[kvp.Key] = (0, 0);
                }
                combined[kvp.Key] = (combined[kvp.Key].sum + kvp.Value, combined[kvp.Key].count + 1);
            }
        }

        // Calculate averages
        var averages = combined.ToDictionary(kvp => kvp.Key, kvp => (double)kvp.Value.sum / kvp.Value.count);

        // Use the averages as needed, e.g., pass them to the view
        ViewBag.Averages = averages;

        return View();
    }
}
