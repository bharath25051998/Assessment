<!-- Modal structure -->
<div id="myModal" class="modal">
  <div class="modal-content">
    <span class="close" onclick="closeModal()">&times;</span>
    <form id="formData">
      @foreach (var item in ViewBag.KickerData)
      {
          <label for="kicker_@item.KickerId">@item.KickerName:</label>
          <input type="text" id="kicker_@item.KickerId" name="@item.KickerId" />
          <br />
      }
    </form>
    <button type="button" onclick="saveData()">Save</button>
  </div>
</div>

<script>
function openModal() {
  var modal = document.getElementById("myModal");
  modal.style.display = "block";
}

function closeModal() {
  var modal = document.getElementById("myModal");
  modal.style.display = "none";
}

function saveData() {
  var formData = {};
  var inputs = document.getElementById("formData").getElementsByTagName("input");
  for (var i = 0; i < inputs.length; i++) {
    formData[inputs[i].name] = inputs[i].value;
  }
  
  // Convert formData to JSON
  var jsonData = JSON.stringify(formData);
  
  // Send jsonData to backend for saving using AJAX
  $.ajax({
    url: '@Url.Action("SaveKickerData", "YourController")', // Replace with your controller's action
    type: 'POST',
    contentType: 'application/json',
    data: jsonData,
    success: function(response) {
      // Handle success response from backend
      console.log('Data saved successfully:', response);
      // Optionally, perform any additional actions after successful save
    },
    error: function(xhr, status, error) {
      // Handle error response from backend
      console.error('Error saving data:', error);
      // Optionally, display an error message to the user
    }
  });
  
  // Close the modal after saving
  closeModal();
}
</script>

<style>
/* Basic styling for the modal */
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  overflow: auto;
  background-color: rgb(0,0,0);
  background-color: rgba(0,0,0,0.4);
}

.modal-content {
  background-color: #fefefe;
  margin: 15% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}

.close {
  color: #aaa;
  float: right;
  font-size: 28px;
  font-weight: bold;
}

.close:hover,
.close:focus {
  color: black;
  text-decoration: none;
  cursor: pointer;
}

input[type="text"] {
  width: 200px;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-bottom: 10px;
}
</style>
