function updateCourses() {
    var chapterId = document.getElementById("chapterDropdown").value;
    var courseDropdown = document.getElementById("courseDropdown");

    // Clear existing options
    courseDropdown.innerHTML = '<option value="">Select a Course</option>';

    if (chapterId != "") {
        var assignedCourses = coursesData[chapterId];
        assignedCourses.forEach(function(course) {
            var opt = document.createElement('option');
            opt.value = course.Id;
            opt.innerHTML = course.Name;
            courseDropdown.appendChild(opt);
        });
    }
}


<script type="text/javascript">
    var coursesData = @Html.Raw(Json.Encode(courses));
</script>
