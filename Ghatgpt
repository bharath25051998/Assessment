}

<h2>Select Your Flavors</h2>

<form method="post" action="/YourController/YourAction">
    <select id="mySelect" name="selectedFlavors" multiple="multiple">
        @foreach (var item in ViewBag.Flavors)
        {
            <option value="@item.Value">@item.Text</option>
        }
    </select>
    <button type="submit">Submit</button>
</form>

@if (ViewBag.SelectedValues != null)
{
    <h2>Your Selection</h2>
    <p>Selected Flavors: @ViewBag.SelectedValues</p>
}
