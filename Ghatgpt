LEFT JOIN PSEmployeeAdditionalDetails ad ON ae.EmployeeEmail = ad.EmployeeEmail 
                                              AND (
                                                  (MONTH(ad.ERD) != MONTH(CONCAT('01-', ae.Month_Year)))
                                                  OR 
                                                  (YEAR(ad.ERD) != YEAR(CONCAT('01-', ae.Month_Year)))
                                                  OR 
                                                  (ad.ERD IS NULL)
                                              )
