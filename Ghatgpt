<!-- Your dropdown code -->
<select id="statusDropdown" style="width: 200px;" multiple>
    <option value="NULL">Select Status</option>
    @foreach (var ap in apstatus)
    {
        <option value="@ap.Id">@ap.Status</option>
    }
</select>

<script>
    // Get the select element
    var select = document.getElementById('statusDropdown');

    // Add an event listener to toggle the selected attribute of the clicked option
    select.addEventListener('click', function(event) {
        var option = event.target;
        if (option.tagName === 'OPTION') {
            option.selected = !option.selected;
        }
    });
</script>

</body>
