@section Scripts {
    <script>
        $(document).ready(function() {
            // ... other script code ...

            $('.module-complete-checkbox').on('change', function() {
                var $checkbox = $(this);
                var moduleId = $checkbox.data('module-id');
                var courseId = @Model.FirstOrDefault()?.CourseID ?? 0; // Replace with actual courseId if different

                if ($checkbox.is(':checked') && !$checkbox.is(':disabled')) {
                    // Make an AJAX call to the server to mark the module as complete
                    $.ajax({
                        url: '@Url.Action("MarkModuleComplete", "Courses")', // Update controller and action names as needed
                        type: 'POST',
                        data: { moduleId: moduleId, courseId: courseId },
                        success: function(response) {
                            // ... existing success logic ...
                        },
                        error: function() {
                            // ... existing error logic ...
                        }
                    });
                }
            });

            // ... other script code ...
        });
    </script>
}
