@model List<CourseModule>

<div id="moduleCarousel" class="carousel slide" data-ride="carousel" data-interval="false">
    <div class="carousel-inner">
        @for (int i = 0; i < Model.Count; i++)
        {
            var module = Model[i];
            <div class="carousel-item @(i == 0 ? "active" : "")" data-module-id="@module.ModuleID">
                <div class="module-content-box">
                    <h1>@module.ModuleName</h1>
                    <div class="module-content">
                        <p>@module.ModuleContent</p>
                    </div>
                    <div class="module-footer">
                        <input type="checkbox" class="module-complete-checkbox" 
                               id="moduleCheckbox-@module.ModuleID"
                               @(module.ModuleID <= module.LastCompletedModuleId ? "checked disabled" : "") 
                               data-module-id="@module.ModuleID">
                        <label for="moduleCheckbox-@module.ModuleID">Complete Module</label>
                    </div>
                </div>
                @if (i == Model.Count - 1)
                {
                    <button class="btn btn-success finish-course" style="display:none;">Finish Course</button>
                }
            </div>
        }
    </div>
    <a class="carousel-control-prev" href="#moduleCarousel" role="button" data-slide="prev">
        <!-- Control Icon -->
    </a>
    <a class="carousel-control-next" href="#moduleCarousel" role="button" data-slide="next">
        <!-- Control Icon -->
    </a>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            var $carousel = $('#moduleCarousel');
            var $nextControl = $('.carousel-control-next');
            $nextControl.prop('disabled', true);

            $('.module-complete-checkbox').on('change', function() {
                var $checkbox = $(this);
                var isChecked = $checkbox.is(':checked');
                var isDisabled = $checkbox.is(':disabled');
                $nextControl.prop('disabled', !(isChecked && !isDisabled));
            });

            $carousel.on('slide.bs.carousel', function(e) {
                var $activeItem = $(e.relatedTarget);
                var $checkbox = $activeItem.find('.module-complete-checkbox');
                if (!$checkbox.is(':checked') || $checkbox.is(':disabled')) {
                    e.preventDefault();
                } else {
                    saveModuleCompletion($checkbox.data('module-id'));
                }
            });

            $carousel.on('slid.bs.carousel', function () {
                var isLastItem = $('.carousel-item').last().hasClass('active');
                $nextControl.prop('disabled', isLastItem);
                $('.finish-course').toggle(isLastItem);
            });

            function saveModuleCompletion(moduleId) {
                // AJAX call to save the module completion
                // Replace with your server URL and data requirements
                $.post('@Url.Action("MarkModuleComplete", "Courses")', { moduleId: moduleId }, function(response) {
                    // Handle response
                });
            }

            $('.finish-course').on('click', function() {
                // Implement course completion logic here
            });
        });
    </script>
}

<style>
    .module-content-box {
        padding: 20px;
        border: 1px solid #ccc;
        height: 400px;
        overflow-y: auto;
        position: relative;
    }
    .module-footer {
        position: absolute;
        bottom: 10px;
        width: 100%;
        text-align: center;
    }
    .finish-course {
        position: absolute;
        right: 15px;
        bottom: 10px;
    }
    .carousel-control-prev, .carousel-control-next {
        width: 5%;
    }
    .carousel-control-next.disabled {
        pointer-events: none;
        opacity: 0.5;
    }
</style>
