<div class="dashboard-container">
    <div class="search-filter">
        <!-- Search filter UI -->
        <input type="text" id="searchInput" placeholder="Search...">
        <!-- Add any other filter options here -->
    </div>

    <div class="card-container">
        @foreach (var group in ViewBag.GroupedData)
        {
            <!-- Line of business (LOB) card -->
            <div class="lob-card card">
                <!-- LOB name as card content -->
                <h2>@group.Key</h2>
                
                <!-- Render cards for the specified LOB -->
                @foreach (var item in group)
                {
                    <div class="card" onclick="toggleDetails(this)">
                        <!-- Card content for the LOB -->
                        <p>AA Number: @item.AANumber</p>
                        <p>SWCU: @item.SWCU</p>
                        <p>Status: @item.Status</p>
                        
                        <!-- Additional details (initially hidden) -->
                        <div class="additional-details" style="display: none;">
                            <p>Additional Details:</p>
                            <!-- Add additional details here -->
                        </div>
                        <!-- Arrow icon indicating expansion state -->
                        <span class="arrow-icon">&#9660;</span>
                    </div>
                }
            </div>
        }
    </div>
</div>

<script>
    function toggleDetails(card) {
        var details = card.querySelector('.additional-details');
        var arrowIcon = card.querySelector('.arrow-icon');
        
        // Toggle visibility of additional details for the clicked card
        if (details.style.display === 'none') {
            // Hide details of all other cards under the same LOB
            hideAllCardsUnderLOB(card);
            // Show details of the clicked card
            details.style.display = 'block';
            // Change arrow to upwards
            arrowIcon.textContent = '\u25B2';
        } else {
            // Hide details of the clicked card
            details.style.display = 'none';
            // Change arrow to downwards
            arrowIcon.textContent = '\u25BC';
        }
    }
    
    function hideAllCardsUnderLOB(clickedCard) {
        var lobCard = clickedCard.closest('.lob-card'); // Find the closest parent with class '.lob-card'
        var allDetails = lobCard.querySelectorAll('.additional-details'); // Find all '.additional-details' within the same LOB card
        var allArrowIcons = lobCard.querySelectorAll('.arrow-icon'); // Find all '.arrow-icon' within the same LOB card

        // Loop through all details and arrow icons within the same LOB card
        allDetails.forEach(function(details) {
            // Check if the current details element is not the details of the clicked card
            if (details !== clickedCard.querySelector('.additional-details')) {
                details.style.display = 'none'; // Hide details if it's not the details of the clicked card
            }
        });

        // Loop through all arrow icons within the same LOB card
        allArrowIcons.forEach(function(arrowIcon) {
            // Check if the current arrow icon is not the arrow icon of the clicked card
            if (arrowIcon !== clickedCard.querySelector('.arrow-icon')) {
                arrowIcon.textContent = '\u25BC'; // Change arrow to downwards if it's not the arrow icon of the clicked card
            }
        });
    }
</script>
