<script>
    // Function to handle redirection to another method in the controller in a new tab
    function redirectToControllerMethodInNewTab(cardId) {
        // Construct the URL with the controller method and ID parameter
        var url = '/ControllerName/MethodName?id=' + cardId; // Replace 'ControllerName' and 'MethodName' with actual names
        
        // Open the URL in a new tab
        window.open(url, '_blank');
    }

    // Add click event listener to the additional details area
    document.querySelectorAll('.additional-details').forEach(function(details) {
        details.addEventListener('click', function(event) {
            // Get the ID of the clicked card
            var cardId = event.target.closest('.card').id;
            
            // Redirect to the controller method with the ID as parameter in a new tab
            redirectToControllerMethodInNewTab(cardId);
        });
    });
</script>
