using System.Data.SqlClient;

// Assuming you have a SqlConnection named connection

using (var command = new SqlCommand("YourStoredProcedureName", connection))
{
    command.CommandType = CommandType.StoredProcedure;
    
    int intValue = 0; // Your integer value

    // Check if intValue is zero, and if so, assign DBNull.Value; otherwise, assign the actual value
    SqlParameter parameter = new SqlParameter("@yourParameterName", (object)intValue == 0 ? DBNull.Value : (object)intValue);
    command.Parameters.Add(parameter);

    // Execute your command
    command.ExecuteNonQuery();
}
