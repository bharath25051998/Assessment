// Add columns from inputTable's rows starting from the second column
for (int i = 1; i < inputTable.Columns.Count; i++)
{
    outputTable.Columns.Add(inputTable.Columns[i].ColumnName);
}

// Add rows and transpose data
for (int i = 0; i < inputTable.Rows.Count; i++)
{
    DataRow newRow = outputTable.NewRow();

    // Populate the row with data from inputTable's rows
    for (int j = 1; j < inputTable.Columns.Count; j++)
    {
        newRow[j - 1] = inputTable.Rows[i][j];
    }

    outputTable.Rows.Add(newRow);
}
