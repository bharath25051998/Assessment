$(document).ready(function() {
    // Format the values in the 4th column with dollar sign and commas
    $('#example tbody td:nth-child(4)').each(function() {
        var value = $(this).text();
        // Remove any existing dollar sign and commas
        var formattedValue = value.replace(/[$,]/g, '');
        // Add the dollar sign and format as currency
        $(this).text('$' + Number(formattedValue).toLocaleString());
    });

    // Initialize DataTables
    $('#example').DataTable({
        dom: 'Bfrtip',
        buttons: [
            {
                extend: 'excelHtml5',
                text: 'Export to Excel'
            }
        ]
    });
});
