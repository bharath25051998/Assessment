@{
    ViewBag.Title = "Multi-Select Dropdown with CheckBoxes";
    List<string> options = new List<string> {"Option 1", "Option 2", "Option 3", "Option 4"};
}

<select id="multiSelectDropdown" multiple="multiple">
    @foreach (var option in options)
    {
        <option value="@option">@option</option>
    }
</select>

<script>
    // JavaScript to handle the multi-select dropdown with checkboxes
    var select = document.getElementById("multiSelectDropdown");

    select.addEventListener("change", function() {
        var selectedOptions = Array.from(select.selectedOptions).map(option => option.value);
        console.log("Selected options: ", selectedOptions);
    });
</script>
