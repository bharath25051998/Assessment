var worksheet = package.Workbook.Worksheets.Add("Sheet1");
worksheet.Cells["A1"].LoadFromCollection(InvenExcel, true);

// Autofit columns to fit the content
worksheet.Cells[worksheet.Dimension.Address].AutoFitColumns();

// Apply WrapText to all cells
worksheet.Cells[worksheet.Dimension.Address].Style.WrapText = true;

using (var stream = new MemoryStream())
{
    package.SaveAs(stream);
    stream.Position = 0;

    var fileName = "Inventory.xlsx";
    var contentType = "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet";

    return File(stream, contentType, fileName);
}
